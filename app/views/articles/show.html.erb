<h1><%= @article.title %></h1>

<p> <%= @article.comment %> </p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Remarks</h2>

<%= render @article.remarks %>

<h2>Add a remark:</h2>

<%= render 'remarks/form' %>
